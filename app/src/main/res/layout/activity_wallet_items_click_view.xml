<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WalletItemsClickView">

        <TextView
            android:id="@+id/codeTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Code"
            android:textColor="#0c19c9"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textColor="#902"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/titleTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descriptTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Description"
            android:textColor="#000"
            android:textSize="14sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/walletPagerId"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:measureWithLargestChild="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/orderBtnId"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="#a35bf5"
            android:layout_gravity="center"
            android:text="Order this product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>